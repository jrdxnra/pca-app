rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // OPTION 1: Temporary open access (extends expiration date)
    // Use this if you haven't implemented Firebase Authentication yet
    // Update the date below to extend access (format: year, month, day)
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(data) {
      return data.ownerId == request.auth.uid;
    }


    // Generic rule for collections that support multi-tenancy
    match /{collectionName}/{docId} {
      // Allow read/write ONLY if the user is the owner
      allow read, update, delete: if isAuthenticated() && isOwner(resource.data);
      allow create: if isAuthenticated() && isOwner(request.resource.data);
    }

    // Allow users to manage their own tokens (e.g. Google Calendar)
    match /users/{userId}/tokens/{tokenId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Allow legacy token storage (temporary fix for OAuth callback)
    match /googleCalendarTokens/{tokenId} {
      allow read, write: if isAuthenticated();
    }

    // Special collections - enforcing strict ownership as well
    match /movements/{movementId} {
      allow read, write: if isAuthenticated() && isOwner(resource.data);
      allow create: if isAuthenticated() && isOwner(request.resource.data);
    }
    
    match /movement-categories/{categoryId} {
      allow read, write: if isAuthenticated() && isOwner(resource.data);
      allow create: if isAuthenticated() && isOwner(request.resource.data);
    }
  }
}

